<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<title>{{ title }}</title>
	<link rel="stylesheet" type="text/css" href="{{ styles 'style.css' }}">
</head>

<body>
	<header>
		<nav>
			<ul>
				<li><a href="{{ path '' }}">{{ menu.home }}</a></li>
				<li><a href="{{ path 'pokemon' }}">{{ menu.list }}</a></li>
			</ul>
			<form method="POST" action="/language">
				<select name="language" onchange="this.form.submit()">
					{{#each languages}}
					<option value="{{ shortName }}" {{ isSelected }}>󠁧󠁢󠁥{{ longName }}</option>
					{{/each}}
				</select>
			</form>
		</nav>
	</header>
